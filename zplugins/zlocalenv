# -*- mode: shell-script -*-
# vim: set ft=zsh :

zlocalenv-enter()
{
    if [ -f "./.zlocalenv" ]; then
        source "./.zlocalenv"
    fi
}

zlocalenv-leave()
{
    if [ -f "$OLDPWD/.zlocalenv-clean" ]; then
        source "$OLDPWD/.zlocalenv-clean"
    fi
    unset ZLOCAL
}

chpwd_functions+=(zlocalenv-leave zlocalenv-enter)
