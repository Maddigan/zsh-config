# -*- mode: shell-script -*-
# vim: set ft=zsh :

priv()
{
    export PRIV_MARKER="$PR_SHIFT_IN$PR_HBAR($RED$BOLD"PRIV"$RESET)"
    zsh
    unset PRIV_MARKER
}

if [ -n "$PRIV_MARKER" ]; then
    export PRIV_MARKER="$PR_SHIFT_IN$PR_HBAR($RED$BOLD"PRIV"$RESET)"
    unset HISTFILE
    fc -R ~/.zhistory
fi
