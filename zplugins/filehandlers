alias -s png=sxiv
alias -s jpg=sxiv
alias -s jpeg=sxiv
alias -s gif=sxiv
alias -s svg=rsvg-view-3

alias -s pdf=evince

alias -s doc=libreoffice
alias -s docx=libreoffice
alias -s odt=libreoffice

alias -s gba=vbam

alias -s tomb='function () { tomb open $1 -k $1.key -fg }'
