# -*- mode: shell-script -*-
# vim: ft=zsh fdm=marker :

# modified version of this http://zshwiki.org/home/zle/new_widget

autoload -U read-from-minibuffer

perl-edit () {
   local REPLY words
   local NEW
   read-from-minibuffer "Perl: "
   (( $? == 1 )) && return
   if [ -n "$REPLY" ]; then
      NEW="$(perl -pe "$REPLY" 2> /dev/null <<< $BUFFER)"
      (( $? != 0 )) && return
      BUFFER=$NEW
   fi
}
zle -N perl-edit
bindkey "%" perl-edit
