alias -g 'GG'='| grep'
alias -g 'HH'='| hlgrep'
hlgrep()
{
    local QUERY
    local OPTIONS
    OPTIONS=($argv[1,-2])
    QUERY=$argv[-1]
    grep $OPTIONS "\\|$QUERY"
}

