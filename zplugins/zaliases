    }
	valgrind()
	{
		/home/vifon/.bin/valgrind-color < /home/vifon/pipe &
		/usr/bin/valgrind $@ 2> /home/vifon/pipe
	}
else    # root
    dired()
    {
        if [ -z "$1" ]; then
            1=.
        fi
        emacs -nw $1
    }
fi
