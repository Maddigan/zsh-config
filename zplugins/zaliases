# alias cal='cal -m'
if [ "$UID" != "0" ]; then  # not root

   # alias init='sudo init'
    if ! (( $+commands[e] )); then
        e()
        {
            emacsclient -c "$@"
        }
    fi
    ee()
    {
        e -n "$@" && unset HAS_STARTED # do not print \a in the next prompt
    }
    eee()
    {
        ee "$@" &!
        exit
    }
    alias E='sudoedit'
    alias sudo='sudo '
    alias root='sudo su'   

