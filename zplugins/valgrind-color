# -*- mode: shell-script -*-
# vim: ft=zsh fdm=marker :

if ! command -v valgrind &> /dev/null; then
    return 1;
fi

if ! command -v valgrind-color &> /dev/null; then
    return 2;
fi

valgrind()
{
    /home/vifon/.bin/valgrind-color < /home/vifon/pipe >&2 &
    /usr/bin/valgrind --log-fd=3 $@ 3> /home/vifon/pipe
}
