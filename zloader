# vim: set ft=zsh fdm=marker :
PLUGINS_DIR=~/.zplugins
PLUGINS=(
	zcolors
	zremap
	zcompletion
	zaliases
	zscripts
	dirmaster
	ztodo
	zpriv
	zSSH
	amount
	)
# {{{ loader
for (( i = 1 ; i <= ${#PLUGINS[@]} ; i++ )); do
	if [ -f $PLUGINS_DIR/$PLUGINS[$i] ]; then
		. $PLUGINS_DIR/$PLUGINS[$i]
		EXITCODE=$?
		if [ "$EXITCODE" = "0" ]; then
			if [ -n "$DEBUG" -o "$TTY[6,8]" = "tty" ]; then
				echo "$GREEN$BOLD*$RESET $PLUGINS[$i] loaded"
			fi
		else
			echo "$RED$BOLD*$RESET $PLUGINS[$i] could not be loaded, error code: $EXITCODE"
		fi
	else
		echo "$RED$BOLD*$RESET $PLUGINS[$i] not loaded - no such plugin"
	fi
done
unset i
unset EXITCODE
# }}}
